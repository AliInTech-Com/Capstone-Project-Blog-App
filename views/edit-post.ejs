<%- include('./partials/header'); %>
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col">
                <form action="/submit-edit" method="POST">
                    <div class="form-group pt-3">
                        <label for="title">Title:</label>
                        <input type="text" name="title" class="form-control" value="<%= blogPost[postId.id].title %>"
                            required>
                    </div>
                    <div class="form-group pt-3">
                        <label for="content">Content:</label>
                        <!-- <input type="text" name="content"  value = "<% //= blogPost[postId.id].post %>"  required> -->
                        <textarea class="form-control" name="content"
                            rows="3"><%= blogPost[postId.id].post %></textarea>
                        <input type="hidden" name="id" value="<%= postId.id %>" required>
                    </div>
                    <div class="pt-3">
                        <input type="submit" class="btn btn-secondary" value="Submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('./partials/footer'); %>